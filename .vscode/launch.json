{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Front End",
      "url": "http://localhost:5001",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Back End",
      "program": "${workspaceFolder}/server/index.ts",
      "runtimeArgs": ["-r", "ts-node/register"],
      "outFiles": ["${workspaceFolder}/server/**/*.js"],
      "sourceMaps": true
    }
  ]
}
